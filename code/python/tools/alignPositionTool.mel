//APT - Align Position Tool: aligns the position of the object selected last...

//Query last selected object...
string $selLast[] = `ls -sl -tl 1`;
//Point Constrain to selection...
string $ptCns[] = `pointConstraint`;
//Find and delete Point Constraint...
string $findPtCns[] = `listRelatives -type pointConstraint $selLast[0]`;
delete $findPtCns[0];
//Select last selected object...
select $selLast[0];